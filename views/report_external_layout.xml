<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_assets_pdf" inherit_id="web.report_assets_pdf">
            <xpath expr="//link[last()]" position="after">
                <link rel="stylesheet" type="text/css" href="/website_layout_customize/static/src/css/style.css"/>
            </xpath>
        </template>
        <template id="external_layout_background_title" inherit_id="web.external_layout_background">
            <xpath expr="//header[@class='header']" position="attributes">
                <attribute name="style">font-family: 'Prompt', sans-serif;</attribute>
            </xpath>
            <xpath expr="//header[@class='article']" position="attributes">
                <attribute name="style">font-family: 'Prompt', sans-serif;</attribute>
            </xpath>
            <xpath expr="//header[@class='footer']" position="attributes">
                <attribute name="style">font-family: 'Prompt', sans-serif;</attribute>
            </xpath>
            <xpath expr="//img" position="after">
                <div class="pull-left">
                    <span class="header-title" t-field="company.report_header_name"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
