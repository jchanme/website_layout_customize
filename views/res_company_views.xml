<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_company_form_inherit_addname" model="ir.ui.view">
		<field name="name">res.company.form.inherit.addname</field>
		<field name="model">res.company</field>
		<field name="inherit_id" ref="base.view_company_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='report_header']" position="after">
				<field name="report_header_name" placeholder="Text beside logo"/>
			</xpath>
		</field>
	</record>

</odoo>
